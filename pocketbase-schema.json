{
  "collections": [
    {
      "name": "requests",
      "type": "base",
      "system": false,
      "schema": [
        {
          "name": "title",
          "type": "text",
          "required": true,
          "options": {
            "min": 1,
            "max": 500
          }
        },
        {
          "name": "author",
          "type": "text",
          "required": false,
          "options": {
            "min": null,
            "max": 300
          }
        },
        {
          "name": "requester",
          "type": "text",
          "required": true,
          "options": {
            "min": 1,
            "max": 100
          }
        },
        {
          "name": "status",
          "type": "select",
          "required": true,
          "options": {
            "maxSelect": 1,
            "values": [
              "requested",
              "searching",
              "ready",
              "completed"
            ]
          }
        },
        {
          "name": "notes",
          "type": "text",
          "required": false,
          "options": {
            "min": null,
            "max": 1000
          }
        },
        {
          "name": "isbn",
          "type": "text",
          "required": false,
          "options": {
            "min": null,
            "max": 20
          }
        },
        {
          "name": "completed_at",
          "type": "date",
          "required": false,
          "options": {
            "min": "",
            "max": ""
          }
        }
      ],
      "indexes": [],
      "listRule": "",
      "viewRule": "",
      "createRule": "",
      "updateRule": "",
      "deleteRule": "",
      "options": {}
    },
    {
      "name": "preferences",
      "type": "base",
      "system": false,
      "schema": [
        {
          "name": "key",
          "type": "text",
          "required": true,
          "options": {
            "min": 1,
            "max": 100
          }
        },
        {
          "name": "value",
          "type": "json",
          "required": false,
          "options": {}
        }
      ],
      "indexes": [
        "CREATE UNIQUE INDEX idx_preferences_key ON preferences (key)"
      ],
      "listRule": "",
      "viewRule": "",
      "createRule": "",
      "updateRule": "",
      "deleteRule": "",
      "options": {}
    }
  ]
}
